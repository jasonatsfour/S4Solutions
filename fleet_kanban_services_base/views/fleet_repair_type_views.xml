<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_repair_type_view_tree" model="ir.ui.view">
        <field name="name">fleet.repair.type.view.tree</field>
        <field name="model">fleet.repair.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="fleet_repair_type_view_form" model="ir.ui.view">
        <field name="name">fleet.repair.type.view.form</field>
        <field name="model">fleet.repair.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group name="group_alias">
                            <label for="alias_name" string="Email Alias"/>
                            <div name="alias_def">
                                <field name="alias_id" class="oe_read_only oe_inline"
                                       string="Email Alias" required="0"/>
                                <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;">
                                    <field name="alias_name" class="oe_inline"/>@
                                    <field name="alias_domain" class="oe_inline" readonly="1"/>
                                </div>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_repair_type_view_kanban" model="ir.ui.view">
        <field name="name">fleet.repair.type.view.kanban</field>
        <field name="model">fleet.repair.type</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="fleet_repair_type_action_form" model="ir.actions.act_window">
        <field name="name">Repair Types</field>
        <field name="res_model">fleet.repair.type</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('fleet_repair_type_view_tree')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('fleet_repair_type_view_kanban')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Repair Type</p>
        </field>
    </record>
</odoo>
