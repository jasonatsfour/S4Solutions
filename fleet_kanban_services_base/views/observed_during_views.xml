<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="observed_during_view_tree" model="ir.ui.view">
        <field name="name">observed.during.tree</field>
        <field name="model">observed.during</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="observed_during_view_form" model="ir.ui.view">
        <field name="name">observed.during.form</field>
        <field name="model">observed.during</field>
        <field name="arch" type="xml">
            <form string="Observed During">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='action_observed_during' model='ir.actions.act_window'>
        <field name="name">Observed During</field>
        <field name="res_model">observed.during</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new Observed During.
            </p>
        </field>
    </record>
</odoo>
