<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vehicle_status_state_tree_view" model="ir.ui.view">
        <field name="name">fleet.vehicle.status.tree</field>
        <field name="model">fleet.vehicle.status</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Status">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_status_form_view" model="ir.ui.view">
        <field name="name">fleet.vehicle.status.form</field>
        <field name="model">fleet.vehicle.status</field>
        <field name="arch" type="xml">
            <form string="Vehicle Discrepancy State">
                <sheet>
                    <group>
                        <group cols="4">
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='action_vehicle_status' model='ir.actions.act_window'>
        <field name="name">Vehicle Status</field>
        <field name="res_model">fleet.vehicle.status</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new vehicle status.
            </p>
        </field>
    </record>
</odoo>
