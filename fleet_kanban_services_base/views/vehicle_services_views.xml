<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vehicle_service_type_view_tree" model="ir.ui.view">
        <field name="name">vehicle.service.type.view.tree</field>
        <field name="model">vehicle.service.type</field>
        <field name="arch" type="xml">
            <tree string="Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" required="1"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_service_type_view_kanban" model="ir.ui.view">
        <field name="name">vehicle.service.type.view.kanban</field>
        <field name="model">vehicle.service.type</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="vehicle_service_type_action_form" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">vehicle.service.type</field>
        <field name="view_mode">tree,kanban</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('vehicle_service_type_view_tree')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('vehicle_service_type_view_kanban')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Service Type.
            </p>
        </field>
    </record>

    <record id="vehicle_service_tag_view_search" model="ir.ui.view">
        <field name="name">vehicle.service.tag.view.search</field>
        <field name="model">vehicle.service.tag</field>
        <field name="arch" type="xml">
            <search string="Vehicle Service Tags">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="vehicle_service_tag_view_tree" model="ir.ui.view">
        <field name="name">vehicle.service.tag.view.tree</field>
        <field name="model">vehicle.service.tag</field>
        <field name="arch" type="xml">
            <tree string="Tags" editable="bottom">
                <field name="name" required="1"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_service_tag_action" model="ir.actions.act_window">
        <field name="name">Vehicle Service Tags</field>
        <field name="res_model">vehicle.service.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Vehicle Service tag
            </p>
        </field>
    </record>

    <record id="vehicle_services_kanban_view" model="ir.ui.view">
        <field name="name">vehicle.services.kanban</field>
        <field name="model">vehicle.services</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="message_needaction_counter"/>
                <field name="user_id"/>
                <field name="priority"/>
                <field name="discrepancy_type_id" invisible="1"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="x_serial_no"/>
                                        <br/>
                                        <field name="title"/>
                                        <br/>
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li>
                                            <b>Vehicle:</b>
                                            <field name="vehicle_id"/>
                                        </li>
                                    </ul>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                    <t t-if="record.message_needaction_counter.raw_value">
                                        <span class="oe_kanban_mail_new" title="Important Messages">
                                            <i class="fa fa-comments"/>
                                            <t t-raw="record.message_needaction_counter.raw_value"/>
                                        </span>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="vehicle_services_tree_view" model="ir.ui.view">
        <field name="name">vehicle.services.tree</field>
        <field name="model">vehicle.services</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Services">
                <field name="name"/>
                <field name="title"/>
                <field name="vehicle_number"/>
                <field name="x_location"/>
                <field name="x_flight_hours"/>
                <field name="x_hw_config"/>
                <field name="x_serial_no"/>
                <field name="description"/>
                <field name="recurring_service_plan_id"/>
                <field name="vehicle_discrepancy_id"/>
                <field name="x_availability"/>
                <field name="discrepancy_type_id" invisible="1"/>
                <field name="observed_date"/>
                <field name="priority"/>
                <field name="recurring"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_services_search_view" model="ir.ui.view">
        <field name="name">vehicle.services.list.select</field>
        <field name="model">vehicle.services</field>
        <field name="arch" type="xml">
            <search string="Search Vehicle Services">
                <field name="name"/>
                <field name="x_serial_no" string="Vehicle Serial Number"/>
                <field name="tag_ids"/>
                <field name="x_availability"/>
                 <field name="stage_id"/>
                <field name="vehicle_id"/>
                <field name="vehicle_number"/>
                <field name="priority"/>
                <filter name="grounding" string="Grounded"
                        domain="[('priority', '=', 'critical')]"/>
                <filter name="non_grounding" string="Non-Grounded"
                        domain="[('priority', '=', 'non-critical')]"/>
                <group expand="0">
                    <filter string="Availability" name="x_availability" context="{'group_by': 'x_availability'}"/>
                    <filter string="Stage" name="service_status" context="{'group_by': 'stage_id'}"/>
                    <filter string="Vehicle" name="vehicle" context="{'group_by': 'vehicle_id'}"/>
                    <filter string="Vehicle Number" name="vehicle_number" context="{'group_by': 'vehicle_number'}"/>
                    <filter string="Grounding Status" name="grounding_status" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_vehicle_services_calendar" model="ir.ui.view">
        <field name="name">vehicle.services.calendar</field>
        <field name="model">vehicle.services</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar date_start="observed_date" string="Services" mode="month">
                <field name="name"/>
                <field name="title"/>
                <field name="vehicle_number"/>
            </calendar>
        </field>
    </record>

    <record id="vehicle_services_form_view" model="ir.ui.view">
        <field name="name">vehicle.services.form</field>
        <field name="model">vehicle.services</field>
        <field name="arch" type="xml">
            <form string="Vehicle Services">
                <field name="is_draft" invisible="1"/>
                <field name="in_progress" invisible="1"/>
                <field name="final_stage" invisible="1"/>
                <header>
                    <field name="active" invisible="1"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_to_open_repairs"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tachometer"
                                context="{'xml_id':'fleet_repair_action_main'}"
                                help="show the repair orders for this vehicle">
                            <field string="Repair Orders" name="fleet_repair_count" widget="statinfo"/>
                        </button>
                        <button type="object"
                                name="toggle_active"
                                class="oe_stat_button"
                                icon="fa-archive"
                                string="Archive"
                                attrs="{'invisible': [('active', '=', False)]}"/>
                        <button type="object"
                                class="oe_stat_button"
                                icon="fa-archive"
                                name="toggle_active"
                                string="Active"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1" readonly="1"/>
                        </h1>
                        <label for="title" class="oe_edit_only"/>
                        <h1>
                            <field name="title" required="1"/>
                        </h1>
                        <label for="vehicle_number" class="oe_edit_only"/>
                        <h2>
                            <field name="vehicle_number" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group cols="4">
                            <field name="vehicle_id"
                                   attrs="{
                                   'readonly': ['|',
                                   ('vehicle_discrepancy_id', '!=', False),
                                   ('is_draft', '=', False)]
                                   }"/>
                            <field name="vehicle_discrepancy_id" readonly="1"/>
                            <field name="x_location" attrs="{'readonly': [('is_draft', '=', False)]}"/>
                            <field name="x_flight_hours" readonly="1"/>
                            <field name="x_availability" readonly="1"/>
                            <field name="priority" readonly="0" required="1"/>
                            <label for="critical_selection"
                                   string="Choosing Critical priority will ground this Vehicle. Do you wish to proceed ?"
                                   style="color: red"
                                   attrs="{'invisible':[('priority','!=','critical')]}"/>
                            <div>
                                <div>
                                    <field name="critical_selection"
                                           attrs="{'invisible':[('priority','!=','critical')],'required': [('priority','=','critical')]}"/>
                                </div>
                            </div>
                            <field name="deadline_date" readonly="0" required="0"/>
                        </group>
                        <group cols="4">
                            <field name="type_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="recurring_service_plan_id"/>
                            <field name="discrepancy_type_id" readonly="1" invisible="1"/>
                            <field name="observed_date" readonly="0" required="0"/>
                            <field name="recurring" invisible="1"/>
                            <field name="x_hw_config" readonly="1"/>
                            <field name="x_serial_no" readonly="1"/>
                            <field name="sr_template_id" attrs="{'readonly': [('is_draft', '=', False)]}"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field nolabel="1" name="description"
                               placeholder="Write here any other information related to the vehicle service."/>
                    </group>
                    <group string="Images">
                        <field name="images_ids" nolabel="1" widget="many2many_binary"/>
                    </group>
                    <notebook>
                        <page string="Included Services" name="sr_included_services">
                            <field name="included_services_ids"
                                   context="{'default_vehicle_id': vehicle_id}"
                                   attrs="{'readonly': [('final_stage', '=', True)]}">
                                <tree string="Included Services" editable="bottom">
                                    <field name='vehicle_id' invisible="1"/>
                                    <field name="cost_subtype_id"
                                           string="Service"
                                           required="True"
                                           domain="[('category','=','service')]"/>
                                    <field name="amount" sum="Price" string="Indicative Cost"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Parts" name="sr_parts">
                            <field name="operations" attrs="{'readonly': [('final_stage', '=', True)]}">
                                <form string="Operations">
                                    <notebook>
                                        <page string="Repair Line" name="sr_operations">
                                            <group>
                                                <group>
                                                    <field name="product_id"/>
                                                    <field name="name"/>
                                                    <field name='stage' invisible="1"/>
                                                    <label for="product_uom_qty"/>
                                                    <div class="o_row">
                                                        <field name="product_uom_qty"/>
                                                        <field name="product_uom" groups="uom.group_uom"/>
                                                    </div>
                                                    <field name='fleet_use' invisible="1"/>
                                                    <field name="lot_id"
                                                           domain="[('product_id', '=', product_id)]"
                                                           context="{'default_product_id': product_id}"
                                                           groups="stock.group_production_lot"/>
                                                    <field name="type" invisible="1"/>
                                                    <field name="price_unit"/>
                                                    <field name="tax_id"
                                                           widget="many2many_tags"
                                                           domain="[('type_tax_use','=','sale')]"/>
                                                    <field name="invoiced" invisible="1"/>
                                                    <field name="price_subtotal" widget="monetary" invisible="1"/>
                                                </group>
                                                <group groups="stock.group_stock_multi_locations">
                                                    <field name="location_id"/>
                                                    <field name="location_dest_id"/>
                                                </group>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                                <tree string="Operations" editable="bottom">
                                    <field name="type"/>
                                    <field name="product_id"/>
                                    <field name='name'/>
                                    <field name="lot_id"
                                           domain="[('product_id', '=', product_id)]"
                                           context="{'default_product_id': product_id}"
                                           groups="stock.group_production_lot"/>
                                    <field name='stage'/>
                                    <field name='fleet_use' invisible="1"/>
                                    <field name="location_id" groups="stock.group_stock_multi_locations"/>
                                    <field name="location_dest_id" groups="stock.group_stock_multi_locations"/>
                                    <field name="product_uom_qty" string="Quantity"/>
                                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                                    <field name="price_unit" invisible="1"/>
                                    <field name="tax_id"
                                           widget="many2many_tags"
                                           domain="[('type_tax_use','=','sale')]"/>
                                    <field name="price_subtotal" widget="monetary" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Resolution">
                        <field name="is_resolution_required" invisible="1"/>
                        <field nolabel="1" name="resolution"
                               placeholder="Resolution"
                               attrs="{'required': [('is_resolution_required', '=', True)]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id='action_vehicle_services' model='ir.actions.act_window'>
        <field name="name">Vehicle Services</field>
        <field name="res_model">vehicle.services</field>
        <field name="view_mode">kanban,tree,form,calendar,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new vehicle services.
            </p>
        </field>
    </record>
</odoo>
