<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_repair_view_tree" model="ir.ui.view">
        <field name="name">fleet.repair.view.tree</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='progress'"
                  decoration-danger="state=='confirmed'">
                <field name="name"/>
                <field name="user_id"/>
                <field name="state" invisible="1"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="fleet_repair_search_view" model="ir.ui.view">
        <field name="name">fleet.repair.list.select</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <search string="Search Fleet Repair">
                <field name="active"/>
                <field name="name"/>
                <field name="x_serial_no" string="Vehicle Serial Number"/>
                <field name="tag_ids"/>
                <field name="user_id"/>
                <field name="state" invisible="1"/>
                <field name="stage_id"/>
                <field name="product_id"/>
                <field name="user_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <group expand="0">
                    <filter name="group_by_product_id" string="Product To Repair" context="{'group_by': 'product_id'}"/>
                    <filter name="group_by_user_id" string="Assignee" context="{'group_by': 'user_id'}"/>
                    <filter name="group_by_stage_id" string="Stage" context="{'group_by': 'stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="fleet_repair_kanban" model="ir.ui.view">
        <field name="name">fleet.repair.kanban</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" quick_create="false">
                <field name="name"/>
                <field name="stage_id"/>
                <field name="message_needaction_counter"/>
                <field name="user_id"/>
                <field name="tag_ids"/>
                <field name="priority"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <li>
                                            <b>Vehicle:</b>
                                            <field name="vehicle_id"/>
                                        </li>
                                        <li>
                                            <b>Repair Type:</b>
                                            <field name="type_id"/>
                                        </li>
                                        <li>
                                            <b>Assignee:</b>
                                            <field name="user_id"/>
                                        </li>
                                    </ul>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="priority" widget="priority"/>
                                    <t t-if="record.message_needaction_counter.raw_value">
                                        <span class="oe_kanban_mail_new" title="Important Messages">
                                            <i class="fa fa-comments"/>
                                            <t t-raw="record.message_needaction_counter.raw_value"/>
                                        </span>
                                    </t>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="fleet_repair_view_form" model="ir.ui.view">
        <field name="name">fleet.repair.view.form</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <form>
                <field name="user_can_approve" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="user_can_reject" invisible="1"/>
                <field name="is_draft" invisible="1"/>
                <field name="in_work" invisible="1"/>
                <field name="final_stage" invisible="1"/>
                <header>
                    <button string="Approve"
                            name="approve"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('user_can_approve', '=', False)]}"/>
                    <button string="Reject"
                            name="reject"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('user_can_reject', '=', False)]}"/>
                    <field name="stage_id"
                           widget="statusbar"
                           options="{'clickable': True}"
                           attrs="{'invisible': [('active', '=', False)]}"/>
                    <field name="state" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                                name="toggle_active"
                                class="oe_stat_button"
                                icon="fa-archive"
                                string="Archive"
                                attrs="{'invisible': [('active', '=', False)]}"/>
                        <button type="object"
                                class="oe_stat_button"
                                icon="fa-archive"
                                name="toggle_active"
                                string="Active"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Short Summary" class="oe_edit_only"/>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="vehicle_id" attrs="{'readonly': [('is_draft', '=', False)]}"/>
                            <field name="marked" invisible="1"/>
                            <field name="type_id" widget="selection" attrs="{'readonly': [('is_draft', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="x_location"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="partner_id" invisible="1"/>
                            <field name="address_id"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="pricelist_id" groups="product.group_sale_pricelist" invisible="1"/>
                            <field name="x_serial_no"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Request" name="repair_service_request">
                            <field name="vehicle_services_ids">
                                <tree editable="top" create="0">
                                    <field name="service_id" string="Name" required="1" readonly="1"/>
                                    <field name="title" string="Title" readonly="0"/>
                                    <field name="stage_id" nolabel="1" string="Service Status" readonly="0"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Included Services" name="repair_included_services">
                            <field name="included_services_ids" nolabel="1">
                                <tree string="Included Services" editable="bottom">
                                    <field name="cost_subtype_id"
                                           string="Service"
                                           required="True"
                                           domain="[('category','=','service')]"/>
                                    <field name="amount" sum="Price" string="Indicative Cost"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Parts" name="repair_operations">
                            <button name="action_make_all_done"
                                    type="object"
                                    string="Mark all done"
                                    class="oe_highlight oe_highlight btn btn-xs btn-primary pull-right"
                                    attrs="{'invisible':[('marked','=', True)]}"/>
                            <field name="operations" attrs="{'readonly': [('final_stage', '=', True)]}">
                                <form string="Operations">
                                    <notebook>
                                        <page string="Repair Line" name="repair_line_parts">
                                            <group>
                                                <group>
                                                    <field name="product_id"/>
                                                    <field name="name"/>
                                                    <field name='stage' invisible="1"/>
                                                    <label for="product_uom_qty"/>
                                                    <div class="o_row">
                                                        <field name="product_uom_qty"/>
                                                        <field name="product_uom" groups="uom.group_uom"/>
                                                    </div>
                                                    <field name='fleet_use' invisible="1"/>
                                                    <field name="lot_id" domain="[('product_id', '=', product_id)]"
                                                           context="{'default_product_id': product_id, 'default_company_id': parent.company_id}"
                                                           groups="stock.group_production_lot"/>
                                                    <field name="type" invisible="1"/>
                                                    <field name="price_unit"/>
                                                    <field name="tax_id" widget="many2many_tags"
                                                           domain="[('type_tax_use','=','sale')]"/>
                                                    <field name="invoiced" invisible="1"/>
                                                    <field name="price_subtotal" widget="monetary" invisible="1"/>
                                                </group>
                                                <group groups="stock.group_stock_multi_locations">
                                                    <field name="location_id"/>
                                                    <field name="location_dest_id"/>
                                                </group>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                                <tree string="Operations" editable="bottom">
                                    <field name="type"/>
                                    <field name="repair_id" invisible="1"/>
                                    <field name="product_id" options="{'no_create_edit':True}"/>
                                    <field name='name'/>
                                    <field name='stage'/>
                                    <field name='fleet_use' invisible="1"/>
                                    <field name="lot_id"
                                           domain="[('product_id', '=', product_id)]"
                                           context="{'default_product_id': product_id}"
                                           groups="stock.group_production_lot"
                                           attrs="{'readonly': [('fleet_use', '!=', True)]}"/>
                                    <field name="location_id" groups="stock.group_stock_multi_locations"/>
                                    <field name="location_dest_id" groups="stock.group_stock_multi_locations"/>
                                    <field name="product_uom_qty" string="Quantity"/>
                                    <field name="product_uom" string="Unit of Measure" groups="uom.group_uom"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id" widget="many2many_tags"
                                           domain="[('type_tax_use','=','sale')]"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <button name="action_make_done"
                                            type="object"
                                            string="Mark done"
                                            class="oe_highlight btn btn-xs btn-primary pull-right"
                                            attrs="{'invisible': [('stage', '=', 'marked')]}"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Note" name="repair_note">
                            <field name="note" placeholder="Description of the change and its reason ..."/>
                        </page>
                        <page string="Approvals" name="repair_approvals">
                            <field name="approval_ids" nolabel="1" readonly="1" help="repair approvals">
                                <tree decoration-info="template_stage_id==repair_stage_id">
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="status"/>
                                    <field name="template_stage_id"/>
                                    <field name="required_user_ids" widget="many2many_tags"/>
                                    <field name="repair_stage_id" invisible="1"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="user_id"/>
                                            <field name="status"/>
                                        </group>
                                        <group>
                                            <field name="template_stage_id"/>
                                            <field name="required_user_ids" widget="many2many_tags"/>
                                            <field name="repair_stage_id"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Extra Info" name="repair_extra_note" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="repaired"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="fleet_repair_view_calendar" model="ir.ui.view">
        <field name="name">fleet.repair.view.calendar</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <calendar string="repairs" date_start="create_date" color="stage_id">
                <field name="name"/>
                <field name="type_id"/>
            </calendar>
        </field>
    </record>

    <record id="fleet_repair_view_pivot" model="ir.ui.view">
        <field name="name">fleet.repair.view.pivot</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <pivot string="repair Analysis">
                <field name="stage_id" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="fleet_repair_view_graph" model="ir.ui.view">
        <field name="name">fleet.repair.view.graph</field>
        <field name="model">fleet.repair</field>
        <field name="arch" type="xml">
            <graph string="repair Analysis">
                <field name="stage_id" type="row"/>
            </graph>
        </field>
    </record>

    <record id="fleet_repair_action_main" model="ir.actions.act_window">
        <field name="name">Repair Orders</field>
        <field name="res_model">fleet.repair</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new engineering change order.
            </p>
        </field>
    </record>
</odoo>
