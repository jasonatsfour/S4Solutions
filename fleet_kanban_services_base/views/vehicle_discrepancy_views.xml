<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="act_vehicle_discrepancy_2_vehicle_services" model="ir.actions.act_window">
        <field name="name">Service Requests</field>
        <field name="res_model">vehicle.services</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="domain">[('vehicle_discrepancy_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new vehicle services.
            </p>
        </field>
    </record>
    <!-- vehicle discrepancy search view -->
    <record id="vehicle_discrepancy_view_search" model="ir.ui.view">
        <field name="name">vehicle.discrepancy.search</field>
        <field name="model">vehicle.discrepancy</field>
        <field name="arch" type="xml">
            <search string="Vehicle Discrepancy">
                <field name="name"/>
                <field name="vehicle_number"/>
                <field name="x_serial_no"/>
                <field name="priority"/>
                <field name="x_availability"/>
                <field name="observed_date"/>
                <filter name="grounding" string="Grounded"
                        domain="[('priority', '=', 'critical')]"/>
                <filter name="non_grounding" string="Non-Grounded"
                        domain="[('priority', '=', 'non-critical')]"/>
                <group expand="0">
                    <filter string="Availability" name="availability" context="{'group_by': 'x_availability'}"/>
                    <filter string="Vehicle" name="vh_number" context="{'group_by': 'vehicle_number'}"/>
                    <filter string="Observed Date" name="ob_date" context="{'group_by': 'observed_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- vehicle discrepancy tree view -->
    <record id="vehicle_discrepancy_tree_view" model="ir.ui.view">
        <field name="name">vehicle.discrepancy.tree</field>
        <field name="model">vehicle.discrepancy</field>
        <field name="arch" type="xml">
            <tree string="Vehicle Discrepancy">
                <field name="name"/>
                <field name="vehicle_number"/>
                <field name="title"/>
                <field name="x_location"/>
                <field name="x_hw_config"/>
                <field name="x_flight_hours"/>
                <field name="x_serial_no"/>
                <field name="description"/>
                <field name="x_availability"/>
                <field name="discrepancy_type_id" invisible="1"/>
                <field name="observed_date"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <!-- vehicle discrepancy form view -->
    <record id="vehicle_discrepancy_form_view" model="ir.ui.view">
        <field name="name">vehicle.discrepancy.form</field>
        <field name="model">vehicle.discrepancy</field>
        <field name="arch" type="xml">
            <form string="Vehicle Discrepancy">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="action"
                                name="%(fleet_kanban_services_base.act_vehicle_discrepancy_2_vehicle_services)d"
                                icon="fa-wrench">
                            <field string="Service Requests"
                                   name="vehicle_services_count"
                                   widget="statinfo"
                                   style="width:100%"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1" readonly="1"/>
                        </h1>
                        <label for="title" class="oe_edit_only"/>
                        <h1>
                            <field name="title" attrs="{'readonly':[('id','!=', False)]}"/>
                        </h1>
                        <label for="vehicle_id" class="oe_edit_only"/>
                        <h2>
                            <field name="vehicle_id" required="1"/>
                        </h2>

                        <label for="vehicle_number" class="oe_edit_only"/>
                        <h2>
                            <field name="vehicle_number" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group cols="4">
                            <field name="id" invisible="1"/>
                            <field name="x_location" readonly="1"/>
                            <field name="x_flight_hours" readonly="1"/>
                            <field name="x_availability" readonly="1"/>
                            <field name="priority"/>
                            <label for="critical_selection"
                                   string="Choosing Critical priority will ground this Vehicle. Do you wish to proceed ?"
                                   style="color: red"
                                   attrs="{'invisible':[('priority','!=','critical')]}"/>
                            <div>
                                <div>
                                    <field name="critical_selection"
                                           attrs="{'invisible':[('priority','!=','critical')],'required': [('priority','=','critical')]}"/>
                                </div>
                            </div>
                        </group>
                        <group cols="4">
                            <field name="is_grounded" invisible="1"/>
                            <field name="discrepancy_type_id" invisible="1"/>
                            <field name="observed_date" readonly="1"/>
                            <field name="observed_during"/>
                            <field name="hw_failure_mode_ids" widget="many2many_tags"/>
                            <field name="x_hw_config" readonly="1"/>
                            <field name="x_serial_no" readonly="1"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field nolabel="1" name="description"
                               placeholder="Write here any other information related to the vehicle service."/>
                    </group>
                    <group string="Images">
                        <field name="images_ids" nolabel="1" widget="many2many_binary"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id='action_vehicle_discrepancy' model='ir.actions.act_window'>
        <field name="name">Vehicle Discrepancy</field>
        <field name="res_model">vehicle.discrepancy</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new vehicle discrepancy.
            </p>
        </field>
    </record>
</odoo>
