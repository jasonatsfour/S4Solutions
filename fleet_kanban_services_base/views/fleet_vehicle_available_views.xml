<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_available_view_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.available.view.tree</field>
        <field name="model">fleet.vehicle.available</field>
        <field name="arch" type="xml">
            <tree string="Fleet Vehicle Availability">
                <field name="name" required="1"/>
                <field name="is_available"/>
                <field name="is_grounded"/>
                <field name="moc"/>
                <field name="is_in_repair"/>
                <field name="color"/>
            </tree>
        </field>
    </record>

    <record id="fleet_vehicle_available_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.available.view.form</field>
        <field name="model">fleet.vehicle.available</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="color"/>
                        </group>
                        <group>
                            <field name="is_available"/>
                            <field name="is_grounded"/>
                            <field name="moc"/>
                            <field name="is_in_repair"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_vehicle_available_action" model="ir.actions.act_window">
        <field name="name">Fleet Vehicle Availability</field>
        <field name="res_model">fleet.vehicle.available</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a fleet vehicle available.
            </p>
        </field>
    </record>
</odoo>
