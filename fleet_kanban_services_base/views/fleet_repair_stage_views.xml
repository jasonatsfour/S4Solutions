<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_repair_stage_view_tree" model="ir.ui.view">
        <field name="name">fleet.repair.stage.view.tree</field>
        <field name="model">fleet.repair.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="approval_roles"/>
                <field name="folded"/>
            </tree>
        </field>
    </record>

    <record id="view_fleet_repair_stage_kanban" model="ir.ui.view">
        <field name="name">fleet.repair.stage.kanban</field>
        <field name="model">fleet.repair.stage</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="fleet_repair_stage_view_form" model="ir.ui.view">
        <field name="name">fleet.repair.stage.view.form</field>
        <field name="model">fleet.repair.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="folded"/>
                            <field name="is_draft"/>
                            <field name="in_work"/>
                            <field name="final_stage"/>
                            <field name="allow_apply_change"/>
                        </group>
                    </group>
                    <h2>Approvals</h2>
                    <field name="approval_template_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name" placeholder="e.g. Engineering Department"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="approval_type"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_repair_stage_action" model="ir.actions.act_window">
        <field name="name">Repair Stages</field>
        <field name="res_model">fleet.repair.stage</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new Repair stage</p>
            <p>Repair stages give the different stages to manage Services.</p>
        </field>
    </record>
</odoo>
