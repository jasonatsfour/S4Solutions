<odoo>
    <template id="report_fleet_vehicle_barcode">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="vehicle">
                        <div class="row">
                            <table class="table-bordered">
                                <tr>
                                    <td align="center" name="license_plate">
                                        <b>
                                            <span t-field="vehicle.license_plate"/>
                                        </b>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center" name="model_name">
                                        <span t-esc="vehicle.model_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div name="vehicle_image">
                                            <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', vehicle.license_plate,400, 80)"
                                                 style="width:100%;"/>
                                        </div>
                                        <div align="center">
                                            <span t-field="vehicle.license_plate"/>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="row" style="page-break-after:always;" name="barcode_label">
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
