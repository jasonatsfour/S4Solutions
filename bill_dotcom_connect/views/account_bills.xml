<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	<record id="billdotcom_account_bill_view" model="ir.ui.view">
            <field name="name">billdotcom.account.bill.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
            	<xpath expr="//button[@name='button_draft']" position="after">
                    <button name="sync_bills"
                            attrs="{'invisible': [('type', 'in', ('out_invoice', 'out_refund'))]}"
                            string="Sync" type="object" class="oe_highlight"/>
                </xpath>
			</field>
		</record>
    </data>
</odoo>