<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_type_inherit_for_backflush" model="ir.ui.view">
        <field name="name">stock.picking.type.operations.type.inherit.for.backflush</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <field name="show_reserved" position="after">
                <field name="backflush_on_mo_completion"
                       attrs="{'invisible': [('code', '!=', 'mrp_operation')]}" widget="boolean_toggle"/>
                <field name="splits_allowed"
                       attrs="{'invisible': [('code', '!=', 'mrp_operation')]}" widget="boolean_toggle"/>
                <field name="splits_operation_type_id"
                       attrs="{'invisible': [('splits_allowed', '=', False)]}"
                       options="{'no_open':True,'no_create':True}"
                />
            </field>
            <xpath expr="//sheet" position="inside">
                <group>
                    <group name="order_handling" string="Order Handling">
                        <field name="rework"/>
                        <field name="default_component_to_parent_product_id"/>
                        <field name="operation_edit_allowed"/>
                        <field name="component_list_edit_allowed"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>