<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_form_view_inherit_manufacturing_traceability_base" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit_manufacturing_traceability_base</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='finished_move_line_ids']/tree/field[@name='lot_id']" position="replace">
                <field name="lot_id"
                       groups="stock.group_production_lot"
                       context="{'default_product_id': product_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
