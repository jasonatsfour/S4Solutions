<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree_inherit_manufacturing_traceability_base"
            model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="replace">
                <field name="lot_id" groups="stock.group_production_lot"
                       attrs="{'column_invisible': [('parent.show_lots_text', '=', True)]}"
                       context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_lots_inherited_view" model="ir.ui.view">
        <field name="name">stock.move.inherited.lot.tree</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="mrp.view_stock_move_lots"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="needs_lots"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='lot_id']" position="replace">
                <field name="lot_id"
                       groups="stock.group_production_lot"
                       domain="[('is_none_production', '=', False)]"
                       attrs="{'column_invisible': [('parent.needs_lots', '=', False)]}"
                       context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
