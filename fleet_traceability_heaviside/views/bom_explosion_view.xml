<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bom_explosion_form_view" model="ir.ui.view">
        <field name="name">bom.explosion.form</field>
        <field name="model">bom.explosion</field>
        <field name="arch" type="xml">
            <form string="Transfer Configuration From Manufacturing">
                <header>
                    <button name="fetch_all_product"
                            string="Fetch All Product"
                            type="object"
                            class="btn-primary"/>
                    <button name="create_lot_serial_number"
                            string="Create Lot Serial Number"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="manufacture_order_id" domain="[('product_id', '=', product_id)]"/>
                            <field name="vehicle_id"/>
                            <field name="product_id"
                                   context="{'default_type': 'product'}"
                                   attrs="{'readonly':[('is_fetch_product','!=',False)]}"
                                   readonly="1"/>
                            <field name="is_fetch_product" invisible="1"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Components">
                            <field name="bom_explosion_ids" widget="one2many_list">
                                <tree string="Components" editable="bottom">
                                    <field name="level" readonly="1"/>
                                    <field name="product_id" context="{'default_type': 'product'}" readonly="1"/>
                                    <field name="lot_id"/>
                                    <field name="product_qty" readonly="1"/>
                                    <field name="partial_serialization_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" colspan="4" widget="mail_thread" nolabel="1"/>
                </div>
            </form>
        </field>
    </record>

    <record id="bom_explosion_tree_view" model="ir.ui.view">
        <field name="name">bom.explosion.tree</field>
        <field name="model">bom.explosion</field>
        <field name="arch" type="xml">
            <tree string="Transfer Configuration From Manufacturing">
                <field name="manufacture_order_id"/>
                <field name="vehicle_id"/>
                <field name="product_id"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="bom_explosion_action" model="ir.actions.act_window">
        <field name="name">Transfer Configuration From Manufacturing</field>
        <field name="res_model">bom.explosion</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Transfer Configuration From Manufacturing.
            </p>
        </field>
    </record>

    <record id="bom_explosion_action_main" model="ir.actions.act_window">
        <field name="name">Transfer Configuration From Manufacturing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bom.explosion</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="fleet_traceability.bom_explosion_form_view"/>
        <field name="context">{'default_vehicle_id': active_id}</field>
        <field name="target">current</field>
        <field name="binding_model_id" ref="fleet.model_fleet_vehicle"/>
    </record>
</odoo>
