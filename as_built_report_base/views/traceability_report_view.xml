<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_mrp_line" inherit_id="stock.report_mrp_line">
        <xpath expr="//t[1]" position="replace">
            <t t-foreach="lines" t-as="a">
                <t t-set="trclass" t-value="'o_stock_reports_default_style'"/>
                <t t-if="a.get('model') == 'stock.move.line'">
                    <t t-set="trclass" t-value="'o_stock_reports_level0'"/>
                </t>
                <t t-set="domainClass" t-value="'o_stock_reports_domain_line'"/>
                <t t-if="a['unfoldable'] == false">
                    <t t-set="domainClass" t-value="'o_stock_reports_domain_line_1'"/>
                </t>
                <t t-set="column" t-value="0"/>
                <tr t-att-data-unfold="a['unfoldable']"
                    t-att-data-parent_id="a['parent_id']" t-att-data-id="a['id']"
                    t-att-data-model_id="a['model_id']" t-att-data-model="a['model']"
                    t-att-data-res-model="a['res_model']" t-att-data-lot_name="a['lot_name']"
                    t-att-data-lot_id="a['lot_id']" t-att-class="trclass"
                    t-att-style="(a['res_model'] != 'mrp.production') and (a['res_model'] != 'repair.order')and 'display: none;'">
                    <t t-set="tdclass" t-value="''"/>
                    <t t-set="spanclass" t-value="''"/>
                    <t t-if="a.get('unfoldable')">
                        <t t-set="tdclass" t-value="'o_stock_reports_unfoldable'"/>
                    </t>
                    <t t-if="not a.get('unfoldable')">
                        <t t-set="spanclass" t-value="'o_stock_reports_nofoldable'"/>
                    </t>
                    <t t-set="column" t-value="0"/>
                    <t t-foreach="a['columns']" t-as="c">
                        <t t-set="column" t-value="column + 1"/>
                        <td t-att-data-id="a.get('id')" t-att-data-model="a['model']"
                            t-att-data-res-model="a['res_model']" t-att-data-model_id="a['model_id']"
                            t-att-class="tdclass" t-att-data-level="a['level']">
                            <t t-if="column == 1">
                                <t t-if="a.get('unfoldable') and not a.get('is_used')">
                                    <span t-att-data-id="a['id']"
                                          class="o_stock_reports_unfoldable o_stock_reports_caret_icon">
                                        <i class="fa fa-fw fa-caret-right" role="img" aria-label="Unfold" title="Unfold"></i>
                                    </span>
                                </t>
                                <t t-if="a.get('is_used')">
                                    <span role="img" class="o_stock_reports_stream" title="As-Built Traceability Report"
                                          aria-label="As-Built Traceability Report">
                                        <i class="fa fa-fw fa-level-up fa-rotate-270"></i>
                                    </span>
                                </t>
                            </t>
                            <t t-if="a['reference'] == c">
                                <span t-if="c" t-att-class="spanclass">
                                    <a t-att-data-active-id="a['res_id']"
                                       t-att-data-res-model="a['res_model']"
                                       class="o_stock_reports_web_action" href="#">
                                        <t t-raw="c"/>
                                    </a>
                                </span>
                            </t>
                            <t t-elif="a['lot_name'] == c">
                                <span>
                                    <a class="o_stock_report_lot_action" href="#">
                                        <t t-raw="c"/>
                                    </a>
                                </span>
                            </t>
                            <t t-else="">
                                <t t-raw="c"/>
                            </t>
                        </td>
                    </t>
                </tr>
            </t>
        </xpath>
    </template>

    <!--Change headers position of report-->
    <template id="report_stock_inventory_tracebility" inherit_id="stock.report_stock_inventory">
        <xpath expr="//div/span[1]" position="replace">
            <h1>
                <span>As-Built Traceability Report</span>
            </h1>
        </xpath>
        <xpath expr="//table/thead/tr[1]" position="replace">
            <tr class="o_report_header">
                <th class="o_report_line_header">Product</th>
                <th class="o_report_line_header">Reference</th>
                <th class="o_report_line_header">Lot/Serial #</th>
                <th class="o_report_line_header">Quantity</th>
                <th class="o_report_line_header">From</th>
                <th class="o_report_line_header">To</th>
                <th class="o_report_line_header">Date</th>
            </tr>
        </xpath>
    </template>

    <!--Action of stock traceability report-->
    <record id="stock.action_stock_report" model="ir.actions.client">
        <field name="name">As-Built Traceability Report</field>
        <field name="tag">stock_report_generic</field>
        <field name="context"
               eval="{
               'url': '/stock/output_format/stock/active_id',
               'model': 'stock.traceability.report'}"/>
    </record>

    <!-- Print button Report -->
    <template id="report_stock_body_print_tracebility" inherit_id="stock.report_stock_body_print">
        <xpath expr="//div/span[1]" position="replace">
            <h3>As-Built Traceability Report</h3>
        </xpath>
        <xpath expr="//table/thead/tr[1]" position="replace">
            <tr class="o_report_header">
                <th class="o_report_line_header">Product</th>
                <th class="o_report_line_header">Reference</th>
                <th class="o_report_line_header">Lot/Serial #</th>
                <th class="o_report_line_header">Quantity</th>
                <th class="o_report_line_header">From</th>
                <th class="o_report_line_header">To</th>
                <th class="o_report_line_header">Date</th>
            </tr>
        </xpath>
    </template>
</odoo>
