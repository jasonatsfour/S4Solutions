<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_form_inherit_as_built_report" model="ir.ui.view">
        <field name="name">repair.order.as.built.report.inherited.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='operations']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="context">{
                    'operation_type': type,
                    'lot_id': parent.lot_id
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='operations']/tree/field[@name='lot_id']"
                   position="attributes">
                <attribute name="context">{
                    'operation_type': type,
                    'default_company_id': parent.company_id,
                    'default_product_id': product_id,
                    'product_id': product_id,
                    'parent_lot_id': parent.lot_id
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
