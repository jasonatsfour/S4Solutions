<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_production_quant_tree_view" model="ir.ui.view">
        <field name="name">stock.production.quant.tree</field>
        <field name="model">stock.production.quant</field>
        <field name="arch" type="xml">
            <tree string="Non-Traceable Entries">
                <field name="name"/>
                <field name="ref"/>
                <field name="product_id"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="search_stock_production_quant_filter">
        <field name="name">Production Lots Filter</field>
        <field name="model">stock.production.quant</field>
        <field name="arch" type="xml">
            <search string="Product Lots Filter">
                <field name="name"
                       string="Product Lots"
                       filter_domain="['|',('name','ilike',self),('ref','ilike',self)]"/>
                <field name="product_id"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_product"
                            string="Product"
                            domain="[]"
                            context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="stock_production_quant_form_view" model="ir.ui.view">
        <field name="name">stock.production.quant.form</field>
        <field name="model">stock.production.quant</field>
        <field name="arch" type="xml">
            <form string="Non-Traceable Entries">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. LOT/0001/20121"/>
                        </h1>
                    </div>
                    <group name="main_group">
                        <group>
                            <field name="product_id"
                                   help="Product this lot/serial number contains. You cannot change it anymore if it has already been moved."/>
                            <label for="product_qty"/>
                            <div class="o_row">
                                <field name="product_qty"/>
                                <field name="product_uom_id" readonly="1" groups="uom.group_uom"/>
                            </div>
                            <field name="ref"/>
                            <field name="lot_version" string="Version"/>
                            <field name="lot_ids" widget="many2many_tags"/>
                            <field name="is_non_traceable" invisible="1" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_stock_production_quant" model="ir.actions.act_window">
        <field name="name">Non-Traceable Entries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.production.quant</field>
        <field name="view_ids"
               eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('stock_production_quant_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('stock_production_quant_form_view')})]"/>
        <field name="search_view_id" ref="search_stock_production_quant_filter"/>
        <field name="context">{'search_default_group_by_product': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a Non-Traceable Entries.
            </p>
            <p>
                This is the list of all the non-traceable entries you recorded.
                When you select a lot, you can get the traceability of the products contained in lot.
            </p>
        </field>
    </record>

    <menuitem id="menu_action_stock_production_quant"
              action="action_stock_production_quant"
              parent="stock.menu_stock_inventory_control"
              groups="stock.group_production_lot"
              sequence="102"/>
</odoo>
