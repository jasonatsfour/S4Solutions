<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_vehicle_view_form_inherit_fleet_traceability_base" model="ir.ui.view">
        <field name="name">fleet.vehicle.form.inherit_fleet_traceability_base</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='return_action_to_open']" position="after">
                <button name="%(action_as_maintained_report)d"
                        icon="fa-arrow-up"
                        class="oe_stat_button"
                        string="As Maintained"
                        type="action"/>
            </xpath>
            <field name="product_id" position="after">
                <field name="lot_id"
                       domain="[('product_id', '=', product_id)]"
                       context="{'default_product_id': product_id, 'default_company_id': company_id}"
                       groups="stock.group_production_lot"/>
            </field>
        </field>
    </record>
</odoo>
