<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mrp_production_workorder_form_view_inherit_inherit_edit_lot_mrp_base_inherit_edit_lot_mrp_heaviside"
            model="ir.ui.view">
        <field name="name">mrp.production.work.order.form.inherit_edit_lot_mrp_base</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_tracking" readonly="1"/>
                <field name="partial_serialization_type" readonly="1"/>
                <field name="partial_serialization_id" readonly="1"/>
                <field name="production_state" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids']/tree/field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [
                        '&amp;', '|',
                        ('product_tracking', '=', 'none'),
                        ('partial_serialization_id', '=', False),
                        ('production_state', 'in', ['done', 'cancel'])
                    ]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='edit_move_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="product_tracking" readonly="1"/>
                <field name="partial_serialization_type" readonly="1"/>
                <field name="partial_serialization_id" readonly="1"/>
                <field name="production_state" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='edit_move_line_ids']/tree/field[@name='lot_id']" position="attributes">
                <attribute name="attrs">{
                    'readonly': [
                        '&amp;', '|',
                        ('product_tracking', '=', 'none'),
                        ('partial_serialization_id', '=', False),
                        ('production_state', 'in', ['done', 'cancel'])
                    ]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
