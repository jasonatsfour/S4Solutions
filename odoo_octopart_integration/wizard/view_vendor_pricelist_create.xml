<odoo>
    <data>

        <record id="create_vendor_pricelist_form_view" model="ir.ui.view">
            <field name="name">create.vendor.pricelist.tree.view</field>
            <field name="model">vendor.pricelist.create</field>
            <field name="arch" type="xml">
                <form string="Vendors &amp; Pricelist">
                    <p>
                    Selected Vendors will be created in the system along
                    with the pricelist.
                    </p>
                    <footer>
                        <button string="Create Vendors &amp; Pricelists"
                                name="create_vendors_pricelist"
                                type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_create_vendor_pricelist"
                    multi="True"
                    key2="client_action_multi"
                    name="Create Vendors &amp; Pricelists"
                    res_model="vendor.pricelist.create"
                    src_model="octopart.seller.detail"
                    view_mode="form" target="new" view_type="form"/>

    </data>
</odoo>
